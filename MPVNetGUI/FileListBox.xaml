<UserControl x:Class="MPVNetGUI.FileListBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MPVNetGUI"
             mc:Ignorable="d" 
             d:DesignHeight="535" d:DesignWidth="1000">
    <ListBox x:Name="listBox">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <Label Content="{Binding}" FontSize="16" Height="45" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" />
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</UserControl>
