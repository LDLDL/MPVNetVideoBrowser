<Window x:Class="MPVNetGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:csharpgui"
        mc:Ignorable="d"
        Title="NetVideoBrowser" Height="600" Width="1000" Icon="mpv-icon.ico" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" SourceInitialized="ConnectServer">
    <ListBox x:Name="listBox" MouseDoubleClick="listBox_MouseDoubleClick">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <Label Content="{Binding}" FontSize="16" Height="45" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" />
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</Window>
