<Window x:Class="MPVNetGUI.Msg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:csharpgui"
        mc:Ignorable="d"
        Title="Message" Height="140" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Icon="mpv-icon.ico">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="36*"/>
                <RowDefinition Height="19*"/>
            </Grid.RowDefinitions>
            <Button x:Name="button" Content="OK" HorizontalAlignment="Center"  Margin="0,0,0,0" VerticalAlignment="Top" Grid.Row="1" Width="75" Height="28" Click="button_Click"/>
            <TextBlock x:Name="textBlock" HorizontalAlignment="Center" Margin="0,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="14" Height="18"/>
        </Grid>

    </Grid>
</Window>
